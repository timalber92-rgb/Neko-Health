[flake8]
max-line-length = 120
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    dist,
    build,
    *.egg-info,
    data/raw,
    data/processed,
    models
per-file-ignores =
    __init__.py:F401
    tests/*.py:E402
    */tests/*.py:E402
    scripts/*.py:E402,F401
    */scripts/*.py:E402,F401
