# HealthGuard Backend Environment Configuration
# Copy this file to .env and update with your configuration

# API Configuration
API_TITLE=HealthGuard API
API_DESCRIPTION=Cardiovascular Disease Risk Prediction & Intervention Recommendation
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration
# IMPORTANT: In production, specify exact allowed origins (no wildcards!)
# Example: CORS_ORIGINS=https://healthguard.example.com,https://app.healthguard.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Security Configuration
# Enable API key authentication for production
API_KEY_ENABLED=false
# Comma-separated list of valid API keys (generate secure random strings)
# Example: API_KEYS=sk_prod_abc123def456,sk_prod_xyz789ghi012
API_KEYS=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# Model Configuration
# MODELS_DIR=./models
# RISK_PREDICTOR_FILENAME=risk_predictor.pkl
# INTERVENTION_AGENT_FILENAME=intervention_agent.pkl
# SCALER_PATH=./data/processed/scaler.pkl

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Environment (development/staging/production)
ENVIRONMENT=development
